pipeline {
    agent any 
    stages {
        stage('build ') { 
            steps {
                echo "this is build stage where we install all the depensences and packages for the environment"
            }
        }
        stage('Test') { 
            steps {
                echo "this is test stage where we debug the software before going further"
            }
        }
        stage('Deploy') { 
            steps {
                echo "this is deployment stage " 
            }
        }
    }
}